{
    "name": "cap-joule",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "engines": {
        "node": "^18.20"
    },
    "dependencies": {
        "@cap-js/hana": "^2.3.4",
        "@cap-js/sqlite": "^2.0.4",
        "@sap/cds": "^9.4.4",
        "@sap/xsenv": "^6.0.0",
        "csv-parse": "^6.1.0",
        "csv-parser": "^3.2.0",
        "express": "^4.21.2",
        "fs": "^0.0.1-security"
    },
    "scripts": {
        "start": "npx cds-serve"
    },
    "private": true,
    "devDependencies": {
        "@sap/cds-dk": "^9.4.2"
    },
    "cds": {
        "requires": {
            "auth": {
                "[production]": {
                    "kind": "dummy"
                },
                "[development]": {
                    "kind": "dummy"
                }
            },
            "db": {
                "[production]": {
                    "kind": "hana"
                },
                "[development]": {
                    "kind": "sqlite",
                    "credentials": {
                        "database": "sqlite.db"
                    }
                }
            }
        }
    }
}
